-- ‚úÖ Obsidian UI Setup
local repo = "https://raw.githubusercontent.com/deividcomsono/Obsidian/main/"
local Library = loadstring(game:HttpGet(repo .. "Library.lua"))()

Library.ForceCheckbox = false
Library.ShowToggleFrameInKeybinds = true

local Window = Library:CreateWindow({
    Title = "Made by MasterZ",
    Footer = "v2.0.0",
    Icon = 0,
    NotifySide = "Right",
    ShowCustomCursor = true,
})

local Tabs = {
    Main = Window:AddTab("Main", "user")
}

local GroupBox = Tabs.Main:AddLeftGroupbox("Auto System")

-- ‚úÖ Setup Rod Dropdown (default NormalRod)
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local Options = Library.Options
local Toggles = Library.Toggles
local RunService = game:GetService("RunService")

GroupBox:AddDropdown("SelectedRod", {
    Values = { "NormalRod" },
    Default = 1,
    Multi = false,
    Text = "Rod yang digunakan",
    Tooltip = "Pilih Rod yang sedang kamu pakai",
    Callback = function(v)
        Library:Notify("üé£ Rod aktif: " .. v, 3)
    end
})

GroupBox:AddButton("üîÑ Refresh Rod dari Backpack & Character", function()
    local rods = {}
    local containers = {
        player:FindFirstChild("Backpack"),
        player.Character
    }

    for _, container in ipairs(containers) do
        if container then
            for _, item in ipairs(container:GetChildren()) do
                print("Cek tool:", item.Name)
                if item:IsA("Tool") and item.Name:lower():find("rod") then
                    table.insert(rods, item.Name)
                end
            end
        end
    end

    if #rods == 0 then
        rods = { "Tidak ada Rod" }
        Library:Notify("‚ùå Tidak ada Rod ditemukan", 3)
    else
        Library:Notify("‚úÖ Rod ditemukan: " .. table.concat(rods, ", "), 3)
    end

    Options.SelectedRod:SetValues(rods)
end)

-- ‚úÖ Auto Fish Aman
local Debounce = false

RunService.Heartbeat:Connect(function()
    if Toggles.AutoFish and Toggles.AutoFish.Value and not Debounce then
        local character = player.Character or player.CharacterAdded:Wait()
        local selectedRod = Options.SelectedRod.Value
        local rod = character:FindFirstChild(selectedRod)

        if rod and rod:FindFirstChild("MiniGame") then
            local minigame = rod.MiniGame

            Debounce = true

            -- Mulai minigame secara natural
            minigame:FireServer("Start")
            
            -- Waktu tunggu acak agar terlihat seperti manusia (3‚Äì6 detik)
            local waitTime = math.random(30, 60) / 10
            task.wait(waitTime)

            -- Selesaikan minigame
            minigame:FireServer("Complete")

            -- Delay tambahan sebelum loop berikutnya
            task.wait(math.random(1, 2))

            Debounce = false
        end
    end
end)

GroupBox:AddToggle("AutoFish", {
    Text = "Auto Fish",
    Default = false,
    Tooltip = "Otomatis mancing jika pegang Rod",
    Callback = function(v)
        if v then
            Library:Notify("üé£ Auto Fish aktif (mode aman)", 3)
        else
            Library:Notify("üõë Auto Fish dimatikan", 3)
        end
    end,
})
